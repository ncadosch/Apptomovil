<p id="notice"><%= notice %></p>

<div class="container">
  <div class="jumbotron">
    <h1>Listing Cars</h1>
  </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Model</th>
          <th>Color</th>
          <th>Brand</th>
          <th>Engine</th>
          <th>Performance</th>
          <th>Kind</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.model %></td>
            <td><%= car.color %></td>
            <td><%= car.brand %></td>
            <td><%= car.engine %></td>
            <td><%= car.performance %></td>
            <td><%= car.kind %></td>
            <td><%= link_to 'Show', car , class: "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger " %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Car', new_car_path %>

</div>
